<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EndQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/congratTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Congratulations Your Name!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yourScoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="YOUR SCORE:"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4/5"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="20"
        android:orientation="vertical">

        <Button
            android:id="@+id/newQuizButton"
            android:layout_width="240sp"
            android:layout_height="64sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#CFCFCF"
            android:text="Take New Quiz"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp" />

        <ImageView
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/finishButton"
            android:layout_width="240sp"
            android:layout_height="64sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#CFCFCF"
            android:text="Finish"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp" />
    </LinearLayout>
</LinearLayout>